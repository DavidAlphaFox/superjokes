
@{
    ViewBag.Title = "友情链接";
    Layout = "~/Views/Shared/_BaseAdminLayoutPage.cshtml";
}
@section header{
  <script type="text/javascript">
      function search(p) {
          $.ajax({
              url: '/account/linkresult',
              type: 'post',
              dateType: 'json',
              data: { page: p },
              success: function (d) {
                  $("#searchresult").html(d);
              }
          });
      }

      $(document).ready(function () {
          search(1);
      });

      function deletelink(id) {
          if (confirm("确定要删除该记录吗?")) {
              $.post('/account/DeleteLink', { id: id }, function (d) {
                  if (d.Success) {
                      alert('删除成功!');
                      search(1);
                  }
                  else
                  {
                      alert("删除失败！");
                  }
              });
          }
      }


    </script>    
}
<h2>友情链接管理<a target="_parent" style="margin-left:10px;font-weight:normal;font-size:small;" href="/account/linkedit">添加友情链接</a></h2>


<div id="searchresult"></div>

