
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="keywords" content="@ViewBag.KeyWords" />
    <meta name="description" content="@ViewBag.Description" />
    <link type="text/css" rel="stylesheet" href="~/Styles/xiaohualist.css" />
    <link type="text/css" rel="stylesheet" href="~/Styles/webHead.css" />
    <script type="text/javascript" src="~/Scripts/jquery-2.1.3.min.js"></script>
    @RenderSection("header",false)
</head>
<body>
    <div id="headerWrap" class="site-nav">
        <div class="site-nav-inner clearfix">
            <div class="quick-menu">
                <a target="_blank" href="/">超级冷笑话</a>
            </div>

            <div class="login-info" id="userbar">
                @if (Request.IsAuthenticated != null)
                {
                    <a target="_self" href="/user/profile" rel="nofollow">@HttpContext.Current.User.Identity.Name</a>
                    <a target="_self" href="/user/logout" rel="nofollow">退出</a>
                }
                else
                {
                    <a target="_self" href="/login" rel="nofollow">登录</a>
                    <a target="_blank" href="/register" rel="nofollow">注册</a>
                }

            </div>
        </div>
    </div>
    <div style="height:400px;margin-top:10px;margin-left:10px;">

        <div class="profileLeft">
            <ul class="useractionlist">
                <li><a href="/account/verifylist">审核</a></li>
                <li><a href="/account/userlist">用户管理</a></li>
                <li><a href="postlist">发表记录</a></li>
                
            </ul>
        </div>
        <div class="profileRight">
            @RenderBody()
        </div>
    </div>
    @StackExchange.Profiling.MiniProfiler.RenderIncludes()
</body>
</html>
